{
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": false,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "always",
	"overrides": [
		{
			"files": ["*.css"],
			"options": {
				"parser": "css"
			}
		},
		{
			"files": ["*.js", "*.cjs", "*.mjs", "*.jsx"],
			"options": {
				"parser": "javascript"
			}
		},

		{
			"files": ["*.ts", "*.tsx"],
			"options": {
				"parser": "typescript"
			}
		},

		{
			"files": ["*.json", "*.jsonc", ".babelrc", ".prettierrc"],
			"options": {
				"parser": "json"
			}
		}
	],
	"endOfLine": "auto"
}
